{
  "name": "letterpad-cli",
  "version": "0.1.10",
  "description": "A CLI tool for managing Letterpad installations and upgrades",
  "main": "lib/index.js",
  "scripts": {
    "dev": "node ./lib/index.js",
    "test": "jest",
    "lint": "eslint '**/*.js' --ignore-pattern node_modules/",
    "pretty": "prettier --write '**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty && yarn lint && git add .",
      "pre-push": "yarn test"
    }
  },
  "bin": {
    "letterpad": "./bin/letterpad"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letterpad/letterpad-cli.git"
  },
  "keywords": [],
  "author": "Abhishek Saha",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "chalk": "^2.4.1",
    "cli-table": "^0.3.1",
    "commander": "^2.19.0",
    "copy-dir": "^0.4.0",
    "decompress": "^4.2.0",
    "download": "^7.1.0",
    "enquirer": "^2.0.6",
    "fs-extra": "^7.0.1",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.4",
    "inquirer": "^6.2.0",
    "jest": "^23.6.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.2",
    "webpack": "^4.25.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*test.js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
